factorial_ax : THEORY
BEGIN

  MT: TYPE+ % abstract type for measure

  wfm_f: [nat -> MT]

  R: pred[[MT,MT]]   % relation to compare measures

  R_wf: AXIOM % for factorial_TCC1
    well_founded?(LAMBDA (x: MT, y: MT): R(x, y));

  wfm_f_dec: AXIOM % for factorial_TCC3
    FORALL (n: nat): NOT n = 0 IMPLIES R(wfm_f(n - 1), wfm_f(n))

  factorial(n:nat) : RECURSIVE nat =
    IF n = 0 THEN 1
    ELSE n*factorial(n-1)
    ENDIF
  MEASURE wfm_f BY R  

END factorial_ax
