factorial_pvs  % [ parameters ]
		: THEORY

  BEGIN

  IMPORTING factorial_pvs0

  % factorial(n:nat): RECURSIVE posnat =
  % 	      IF n=0 THEN 1
  % 	      ELSE N*factorial(n-1)
  % 	      ENDIF
  %MEASURE factorial_wfm BY <

  factorial(n:nat): RECURSIVE {m:nat| m = factorial_pvs0(n)} =
    IF n /=0 THEN n*factorial(n-1)
    ELSE 1
    ENDIF
  MEASURE factorial_wfm BY <

  END factorial_pvs
