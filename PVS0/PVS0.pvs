PVS0[T:TYPE+] : DATATYPE WITH SUBTYPES Expr,Def
BEGIN

   cnst(get_val:T) : cnst? : Expr  % constants
   vr : vr? : Expr                   % variable
   op1(get_op:nat,get_arg:Expr) : op1? : Expr % unary operators
   op2(get_op:nat,get_arg1,get_arg2:Expr) : op2? : Expr % binary operators
   rec(get_arg:Expr) : rec? : Expr % recursive call
   ite(get_cond,get_if,get_else:Expr) : ite? : Expr % if-then-else
   def(get_body:Expr) : def? : Def % definition

END PVS0

