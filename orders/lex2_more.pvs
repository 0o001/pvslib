lex2_more[T:TYPE] : THEORY
BEGIN
  IMPORTING well_foundedness[T]
  MeasureFun : TYPE = [T->nat]
 
  lt(m1,m2:MeasureFun)(t1,t2:T) : bool = 
  lex2(m1(t1),m2(t1)) < lex2(m1(t2),m2(t2))

  lt_wfo : JUDGEMENT
    lt(m1,m2:MeasureFun) HAS_TYPE (well_founded_order?[T])

  lt_lex2(wf1,wf2:(well_founded?[T]))(t1,t2:T): bool =
    wf1(t1,t2) OR (t1 = t2 AND wf2(t1,t2))

  lt_lex2_wf: JUDGEMENT
    lt_lex2(wf1,wf2:(well_founded?[T])) HAS_TYPE (well_founded?[[T]])

END lex2_more
