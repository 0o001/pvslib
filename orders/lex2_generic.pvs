% Generci lexical ordering for pairs.
lex2_generic[A, B: TYPE, ltA: (well_founded?[A]),ltB: (well_founded?[B])]: THEORY
BEGIN

  x, y: VAR [A, B]

  lt_lex2(x, y): bool =
    ltA(x`1, y`1) OR (x`1 = y`1 AND ltB(x`2, y`2))

  lt_lex2_wf: JUDGEMENT
    lt_lex2 HAS_TYPE (well_founded?[[A,B]])

END lex2_generic
