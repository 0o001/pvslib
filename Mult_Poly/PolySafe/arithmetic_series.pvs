% Author:          J. Tanner Slagel

%-----     %
  BEGIN
%     -----%

%----------------------------------------------------------------------
%%Importing finite sums in sigma package
%----------------------------------------------------------------------

  IMPORTING reals@sigma[nat]

%----------------------------------------------------------------------
%%Define arithmetic sequence 
%----------------------------------------------------------------------

 arithmetic_seq(a0:real, d:real)(n:nat): real
  = a0 + n*d
  
%----------------------------------------------------------------------
%%Showing equivalent to other recursive definition
%----------------------------------------------------------------------

 arithm_recurse: LEMMA
  FORALL (a0:real, d:real, n, m:nat):
  arithmetic_seq(a0,d)(n)
  = arithmetic_seq(a0,d)(m) + (n-m)*d

%----------------------------------------------------------------------
%%Define arithmetic series
%----------------------------------------------------------------------

 arithmetic_series(a0:real, d:real)(n:nat): real
  = sigma(0,n, arithmetic_seq(a0,d))

%----------------------------------------------------------------------
%%Identity for arithmetic series
%----------------------------------------------------------------------

 sum_arithmetic: LEMMA
  FORALL(a0:real, d:real, n:nat):
  arithmetic_series(a0, d)(n)
  = (n+1) * (arithmetic_seq(a0, d)(0) + arithmetic_seq(a0, d)(n)) / 2
  
  %_________The End___%
  END arithmetic_series
