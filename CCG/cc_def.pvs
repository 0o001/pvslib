cc_def[Exprs,Conditions: TYPE, Vars: TYPE FROM Exprs] : THEORY
BEGIN

  CallingContext: TYPE = [# formals: Vars,
                            actuals: Exprs,
                            conds: Conditions #]

  make_cc(formals: Vars, actuals: Exprs, conds: Conditions): CallingContext =
    (# formals := formals, actuals := actuals, conds := conds  #)

  Seq_cc : TYPE = [nat->CallingContext]

END cc_def
