cc_def[Val,Expr,Condition: TYPE, Vr: TYPE FROM Expr] : THEORY
BEGIN

  CallingContext: TYPE = [# formals: Vr,
                            actuals: Expr,
                            conds: Condition #]

  make_cc(formals: Vr, actuals: Expr, conds: Condition): CallingContext =
    (# formals := formals, actuals := actuals, conds := conds  #)

  Seq_cc      : TYPE = [nat->CallingContext]
  Seq_val     : TYPE = [nat->Val]
  Environment : TYPE = [Vr->Val]

END cc_def
